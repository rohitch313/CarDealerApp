<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MyApp.View.Account.LogoutPage"
               Color="Transparent" Shell.TabBarIsVisible="False"  >
    <Frame CornerRadius="20" WidthRequest="334" HeightRequest="270"  x:Name="popupmessage">
        <VerticalStackLayout Spacing="20">
            <Image Source="logout.png" WidthRequest="65" HeightRequest="109.48" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Text="Are You Sure?" TextColor="#191C1C" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Yes" WidthRequest="145.5" HeightRequest="40"  TextColor="#40a09b" FontSize="14" BackgroundColor="white" Clicked="Button_Clicked_Yes"/>
                <Button Text="No" WidthRequest="145.5" HeightRequest="40" CornerRadius="35" TextColor="white"  FontSize="14" BackgroundColor="#40a09b" Clicked="Button_Clicked_No"/>
            </StackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
<?xml version="1.0" encoding="utf-8" ?><the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"             x:Class="MyApp.PaymentProovView" HasHandle="True" BackgroundColor="White">    <the49:BottomSheet.Detents>        <the49:HeightDetent Height="113"></the49:HeightDetent>    </the49:BottomSheet.Detents>    <Grid>        <Image Source="draghandle.png" WidthRequest="32" HeightRequest="4" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,20,0,0"/>        <Grid>            <HorizontalStackLayout Spacing="50" Margin="0,50,0,0" HorizontalOptions="Center">                <VerticalStackLayout>                    <ImageButton Source="cameraicon.png" >                        <ImageButton.GestureRecognizers>                            <TapGestureRecognizer Tapped="CameraTapped" />                        </ImageButton.GestureRecognizers>                    </ImageButton>                    <Label Text="Camera" Margin="10,0,0,0">                        <Label.GestureRecognizers>                            <TapGestureRecognizer Tapped="CameraTapped" />                        </Label.GestureRecognizers>                    </Label>                </VerticalStackLayout>                <VerticalStackLayout>                    <ImageButton Source="photoicon.png" Margin="10,0,0,0">                        <ImageButton.GestureRecognizers>                            <TapGestureRecognizer Tapped="PhotosTapped" />                        </ImageButton.GestureRecognizers>                    </ImageButton>                    <Label Text="Photos" Margin="20,0,0,0">                        <Label.GestureRecognizers>                            <TapGestureRecognizer Tapped="PhotosTapped" />                        </Label.GestureRecognizers>                    </Label>                </VerticalStackLayout>                <VerticalStackLayout>                    <ImageButton Source="docsicon.png" WidthRequest="24" HeightRequest="24" Margin="0,12,0,0">                        <ImageButton.GestureRecognizers>                            <TapGestureRecognizer Tapped="DocumentTapped" />                        </ImageButton.GestureRecognizers>                    </ImageButton>                    <Label Text="Document" Margin="10,8,0,0">                        <Label.GestureRecognizers>                            <TapGestureRecognizer Tapped="DocumentTapped" />                        </Label.GestureRecognizers>                    </Label>                </VerticalStackLayout>            </HorizontalStackLayout>            <ImageButton    x:Name="capturedImage"      Style="{StaticResource ImageButton}"   SemanticProperties.Hint="Counts the number of times you click"     HorizontalOptions="Start"    BorderColor="Gray"    BorderWidth="3"                IsVisible="false"/>        </Grid>    </Grid></the49:BottomSheet>